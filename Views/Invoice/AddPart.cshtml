@model GarageManagementSystem.ViewModels.InvoicePartViewModel

@{
    ViewData["Title"] = "AddPart";
}

<h1>AddPart</h1>

<h4>InvoicePart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvoiceId" />
            <div class="form-group">
                <label asp-for="PartId" class="control-label"></label>
                <select asp-for="PartId" class ="form-control" asp-items="ViewBag.OptPart"></select>
                <span asp-validation-for="PartId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@ViewBag.Id">Back to Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
